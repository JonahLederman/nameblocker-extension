{
  "manifest_version": 3,
  "name": "CensorNames",
  "version": "1.0",
  "description": "Automatically blacks out names on webpages.",
  "icons": {
    "16": "icons/2.png"
    
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/2.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["first-names.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}
